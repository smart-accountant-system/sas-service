{
  "swagger": "2.0",
  "info": {
    "description": "This is a API for Smart Accountant System - SAS server.  You can find out more about SAS at [SAS' project wiki](https://sites.google.com/fpt.edu.vn/sms-se1267/).",
    "version": "1.0.0",
    "title": "SAS' Swagger"
  },
  "host": "localhost:7777",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/admins": {
      "get": {
        "tags": ["admin"],
        "summary": "Get a list of administrators",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "token",
            "type": "string"
          },
          {
            "in": "query",
            "name": "search",
            "type": "number",
            "description": "Search by fullname of admin"
          },
          {
            "in": "query",
            "name": "skip",
            "type": "number"
          },
          {
            "in": "query",
            "name": "limit",
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "admins": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                },
                "total": {
                  "type": "number"
                }
              }
            },
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Check your token"
          }
        }
      },
      "post": {
        "tags": ["admin"],
        "summary": "Add new administrator",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "token",
            "type": "string"
          },
          {
            "in": "body",
            "name": "admin",
            "schema": {
              "type": "object",
              "required": ["username", "password", "fullname"],
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "fullname": {
                  "type": "string"
                },
                "avatar": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Check your token"
          },
          "404": {
            "description": "Bad Request / Unknown variable"
          }
        }
      }
    },
    "/admins/login": {
      "post": {
        "tags": ["admin"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "token",
            "type": "string"
          },
          {
            "in": "body",
            "name": "admin",
            "schema": {
              "type": "object",
              "required": ["username", "password"],
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/admins/{id}": {
      "patch": {
        "tags": ["admin"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "token",
            "type": "string"
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "admin",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "fullname": {
                  "type": "string"
                },
                "avatar": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        }
      },
      "delete": {
        "tags": ["admin"],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
            "name": "token",
            "type": "string"
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  }
}
